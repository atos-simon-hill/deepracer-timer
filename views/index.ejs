<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>deepracer-timer</title>
    <link rel="stylesheet" href="./timer.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <nav class="controls">
        <a href="#" id="btn_start" class="button" onClick="stopwatch.start();">Start</a>
        <a href="#" id="btn_pause" class="button" onClick="stopwatch.pause();">Pause</a>
        <a href="#" id="btn_lap" class="button" onClick="stopwatch.lap();">Lap</a>
        <a href="#" id="btn_reset" class="button" onClick="stopwatch.reset();">Reset</a>
        <a href="#" id="btn_clear" class="button" onClick="stopwatch.clear();">Clear</a>
    </nav>
    <div class="stopwatch"></div>
    <ul class="results"></ul>
</body>
</html>

<script src="./timer.js"></script>
<script>
    var socket = io();
    socket.on('start', function(data) {
        stopwatch.start();
    });
    socket.on('pause', function(data) {
        stopwatch.pause();
    });
    socket.on('lap', function(data) {
        stopwatch.lap();
    });
    socket.on('reset', function(data) {
        stopwatch.reset();
    });
    socket.on('clear', function(data) {
        stopwatch.clear();
    });
</script>
